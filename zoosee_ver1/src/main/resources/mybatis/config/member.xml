<?xml version="1.0" encoding="UTF-8"?>
<!-- Sql Mapper -->
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="member">
	
	<insert id="registerMember" parameterType="memberVO">
		insert into Pet_MEMBER(id,name,address,gender,email,password,tel,job,rank)
		values(#{id},#{name},#{address},#{gender},#{email},#{password},#{tel},#{job},#{rank})
	</insert>

	<select id="loginMember" resultType="memberVO" parameterType="memberVO">
		select id,name,address,gender,email,password,tel,job,rank from Pet_MEMBER
		where id=#{id} and password=#{password}
	</select>
	
	<select id="memberIdCheck" resultType="int">
		select count(*) from pet_member where id=#{value}
	</select>
	
	<update id="updateMember" parameterType="memberVO">
		update Pet_MEMBER set password=#{password},address=#{address},email=#{email},tel=#{tel},job=#{job}
		where id=#{id}
	</update>
	
	<select id="memberList" resultType="memberVO" parameterType="string">
		select id,name ,address, gender, email, tel, job, rank
		from pet_member
		where rank=#{value}
	
	</select>
	
	<select id="getMemberVO" resultType="memberVO" >
		select id,name ,address, gender, email, tel, job, rank
		from pet_member
		where id=#{value}
	</select>
	
	
</mapper>